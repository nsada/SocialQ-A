<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="user" extends="struts-default" namespace="/user">

        <action name="showPersonalCenter" class="action.UserAction" method="showPersonalInformation">
            <result name="success">/WEB-INF/content//user/PersonalInformation.jsp</result>
            <result name="error">/WEB-INF/content//user/error.jsp</result>
        </action>   
         
        <action name="showPersonalInformation" class="action.UserAction" method="showPersonalInformation">
            <result name="success">/WEB-INF/content//user/PersonalInformation.jsp</result>
            <result name="error">/WEB-INF/content//user/error.jsp</result>
        </action>    

        <action name="showQuestionBase" class="action.UserAction" method="showQuestionBase">
            <!-- 
            <result type="redirectAction">
                <param name="actionName">showQuestionBase</param>           
                <param name="namespace">/questionBase</param>
            </result>
             -->
            <result name="success">/WEB-INF/content//user/PersonalInformation.jsp</result>
            <result name="error">/WEB-INF/content//user/error.jsp</result>            
        </action>   

        <action name="loginPro" class="action.UserAction">
            <result name="success">/WEB-INF/content/user/welcome.jsp</result>
            <result name="error">/WEB-INF/content/user/error.jsp</result>
        </action>
        
        <action name="registPro" class="action.UserAction" method="regist">
            <result name="success">/WEB-INF/content/user/welcome.jsp</result>
            <result name="error">/WEB-INF/content/user/error.jsp</result>
        </action>
        
        <action name="logout" class="action.UserAction" method="logout">
            <result name="success">/WEB-INF/content/user/welcome.jsp</result>
            <result name="error">/WEB-INF/content/user/error.jsp</result>
        </action>
        
        <action name="viewAllUsers" class="action.ViewAllUsersAction">
            <result name="success">/WEB-INF/content/user/listUsers.jsp</result>
            <result name="error">/WEB-INF/content/user/error.jsp</result>
        </action>
    
    
        <action name="*">
            <result>/WEB-INF/content/user/{1}.jsp</result>
        </action>
    </package>

</struts>
